<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.SampleActivity">
    <Button
        android:id="@+id/signOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Out"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Upi Id"
        android:id="@+id/upiIdText"
        android:layout_above="@id/Amount"
        android:layout_centerHorizontal="true"
        android:layout_margin="8dp"
        />
    <EditText
        android:id="@+id/Amount"
        android:hint="Enter amount in rupees"
        android:layout_width="wrap_content"
        android:layout_margin="8dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/makePayment"
        android:layout_centerHorizontal="true"/>
    <Button
        android:id="@+id/makePayment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pay"
        android:layout_centerInParent="true"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="See transactions"
        android:id="@+id/seeTransactions"
        android:layout_below="@id/makePayment"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        />

</RelativeLayout>